# main canvas
alignment top_right
gap_x 10
gap_y 60
minimum_size 400 5

background no

own_window yes
own_window_class Conky
own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual no
#own_window_argb_value 200 
own_window_transparent yes
own_window_colour black

default_color white
default_outline_color white
default_shade_color white

# bordering
draw_outline no
draw_shades no
draw_borders no
stippled_borders 0
#border_margin 0
#border_width 1

# font
use_xft yes
xftfont DejaVu Sans Mono:size=10

use_spacer left

out_to_console no
out_to_stderr no
extra_newline no
uppercase no
double_buffer yes
cpu_avg_samples 2
update_interval 1.0
net_avg_samples 2
no_buffers yes

# graphs
show_graph_scale no
show_graph_range no
draw_graph_borders no

# units and formatting
short_units no
format_human_readable yes
pad_percents 0

