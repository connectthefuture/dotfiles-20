alignment top_right
background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=10
gap_x 10
gap_y 60
minimum_size 400 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type override
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent yes
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

# units and formatting
short_units no
format_human_readable yes
pad_percents 0

# free disk space templates
#template0 \1${alignr}${fs_free_perc \1}% free
#template1 ${fs_bar 6,250 \1}${alignr}${fs_free \1}/${fs_size \1}
template0 \1${alignr}${fs_free \1} / ${fs_size \1}
template1 ${fs_bar 6,320 \1}${alignr}${fs_free_perc \1}% free
#template2 ${diskiograph \1 10, , -l}
template2 Read: ${diskio_read \1} Write: ${diskio_write \1}


TEXT
SYSTEM ${hr 2}
${uid_name 1000}@$nodename
${color grey}Running $color$sysname $kernel ${color grey}on$color $machine
Architecture: $machine
Kernel:       $kernel
${color grey}Uptime:$color $uptime


PROCESSOR ${hr 2}
CPU1: ${cpu cpu1}% ${cpubar cpu1}$color
CPU2: ${cpu cpu2}% ${cpubar cpu2}$color
${cpugraph 70, , -l}
Temperature:$alignr${acpitemp} C


MEMORY ${hr 2}
RAM ${alignr}$mem / $memmax ($memperc%)
${membar 6}
SWAP ${alignr}$swap / $swapmax ($swapperc%)
${swapbar 6}


FILESYSTEM ${hr 2}
${template0 /}
${template1 /}
${template2 /dev/sdb1}
#${fs_bar 6,250}${alignr}${fs_free /}/${fs_size /}

${template0 /home}
${template1 /home}
${template2 /dev/sdb3}
#${fs_bar 6,250}${alignr}${fs_free /home}/${fs_size /home}

${template0 /mnt/Archived}
${template1 /mnt/Archived}
${template2 /dev/sda1}
#${fs_bar 6,250}${alignr}${fs_free /mnt/Archived}/${fs_size /mnt/Archived}


Networking ${hr 2}
${color lightgrey}IP address: $color${addr eth0}
${color lightgrey}Hostname: $color${nodename}
Up:$color ${upspeed eth0} ${color grey} - Down:$color ${downspeed eth0}


PROCESSES ${hr 2}
${color grey}Processes:$color $processes${alignr}${color grey}Running:$color $running_processes

${color grey}Name              PID   CPU%   MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}$color
