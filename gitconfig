[user]
	name = Jonas Sj√∂berg
	email = jomeganas@gmail.com
[color]
	ui = true
[core]
	editor = vim
	attributesfile = ~/.gitattributes
    excludesfile = ~/.gitignore-global
[push]
	default = matching
[merge]
	conflictstyle = diff3
	tool = meld
	#tool = vimdiff
[mergetool]
    tool = meld
[diff]
	tool = meld
	#tool = vimdiff
[difftool "visdiff"]
	cmd = /usr/local/bin/vis_diff.sh $LOCAL $REMOTE x:
	prompt = false[gui]
[diff "image"]
	command = ~/bin/git-imgdiff
[alias]
    lol = log --graph --oneline --decorate --all
    klone = "!f() { git clone "$1" "${1##*/}.git"; }; f"
[difftool "eaglediff"]
	cmd = eaglediff $LOCAL $REMOTE
