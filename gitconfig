[color]
    ui = true
[core]
    editor = vim
    attributesfile = ~/.gitattributes
    excludesfile = ~/.gitignore-global
[push]
    default = matching
[merge]
    conflictstyle = diff3
    tool = meld
    #tool = vimdiff
[mergetool]
    tool = meld
[diff]
    tool = meld
    #tool = vimdiff
[difftool "visdiff"]
    cmd = /usr/local/bin/vis_diff.sh $LOCAL $REMOTE x:
    prompt = false[gui]
[diff "image"]
    command = ~/bin/git-imgdiff
[alias]
    lol = log --graph --oneline --decorate
    ldiff = difftool -t latex
[difftool "eaglediff"]
    cmd = eaglediff $LOCAL $REMOTE
[difftool.latex]
    cmd = $HOME/Scripts/git-latexdiff \"$LOCAL\" \"$REMOTE\"
